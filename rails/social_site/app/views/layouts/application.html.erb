  <script>
    function loadImage(){
      $.each($('.load-image'), function(index, obj){
        console.log("Getting the image");
        var img = new Image();
        img.src = $(obj).attr('data-source');

        $(img).ready(function(){
          console.log("Inserting the image");
          $(obj).attr('src', img.src);
