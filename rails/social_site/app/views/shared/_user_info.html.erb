<%= link_to gravatar_for(user, size: '80', css: "img-circle"), user, class: "col-md-4 col-sm-2 col-xs-4" %>
<div class="col-md-8 col-sm-9 col-xs-8">
  <h1><%= user.name %></h1>
  <% if logged_in? %>
    <% if current_user.admin? || current_user?(user) %>
        <span><%= link_to "Mi Perfil", user %> | <%= link_to "Editar", edit_user_path(user) %></span>
        <% if current_user?(user) %>
          <span class="badge"><%= user.notifications.count %></span>
            <%= link_to "Notificaciones", notifications_path %>
          </span>
        <% end %>
    <% end %>
    <span><%= pluralize(user.microposts.count, "Oracion") %></span>
  <% end %>
</div>
