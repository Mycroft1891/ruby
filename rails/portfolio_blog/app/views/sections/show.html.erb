<div class="col-sm-12 col-md-7 offset-md-3">
  <h1><%= @section.name %></h1>
  <hr>
  <p id="notice"><%= notice %></p>
  <% @section.posts.each do |post| %>
    <h2><%= link_to post.title, post %></h2>
    <%= image_tag post.image %>
    <p><%= post.content %></p>
    <p><%= post.git_link %></p>
  <% end %>
  <hr>
  <%= link_to_if logged_in?, 'Edit', edit_section_path(@section) %> |
  <%= link_to_if logged_in?, 'Back', sections_path %>
</div>
