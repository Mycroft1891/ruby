<%= form_for(post) do |f| %>
  <%= render 'shared/errors', object: f.object %>
    <%= f.text_field :title, class: "form-control", placeholder: :title %>

    <%= f.text_area :code_snippet, class: "form-control textarea", placeholder: :code_snippet %>

    <%= f.text_area :content, class: "form-control textarea", placeholder: :content %>

    <%= f.text_field :git_link, class: "form-control", placeholder: :git_link %>

    <%= f.text_field :image, class: "form-control", placeholder: :image %>

    <%= f.select :section_id, @sections.collect {|s| [s.name, s.id]}, {prompt: "Section"}, class: "form-control" %>

    <%= f.hidden_field :user_id, value: current_user.id %>

    <%= f.submit "Create", class: "btn btn-primary" %>
<% end %>
