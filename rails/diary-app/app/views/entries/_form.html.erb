<div class="row show-entry">

  <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
    <div class="date">
      <h5><%= date.strftime("%B %d - %Y") %></h5>
    </div><!-- end date -->
  </div><!-- end aside -->

  <main class="col-xs-12 col-sm-12 col-md-8 col-lg-7">
    <%= form_for @entry do |f| %>
      <%= render "shared/errors", object: f.object %>
      <div class="form-group">
        <%= f.text_field :title, class: 'form-control', placeholder: 'My Title' %>
      </div>

      <div class="form-group">
        <%= f.hidden_field :content, id: 'entry_content' %>
        <trix-editor input='entry_content' placeholder='What happened to me...'></trix-editor>
      </div>

      <div class="form-group">
        <%= f.submit submit_text, class: "btn btn-lg btn-outline-info" %>
      </div>
    <% end %>
  </main>
</div>
